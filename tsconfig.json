{
  "typeAcquisition": {
    "enable": true
  },
  "include": ["./src/**/*", "./example/src/**/*", "./node_modules/@kaliber/**/*", "./types/**/*"],
  "exclude": ["./node_modules/@kaliber/build/**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "paths": {
      "/*": ["src/*"]
    }
  }
}
